#!/bin/bash

if [ "$1" == "--menu" ] && [ $# -eq 1 ]; then
    colormenu
    exit
fi

FILE=".default"
F_ARG=
L_ARG=
X_ARG=
M_ARG=
ARG=
go (){
    while [ ! -z "$1" ] ; do
        if [ "$1" = "-l" ]; then
            L_ARG=1
        elif [ $1 = "-x" ]; then
            X_ARG=1
        elif [ $1 = "--menu" ]; then
            M_ARG=1_show
        elif [ "$1" = "--" ]; then
            shift 
            ARG=("$@")
            return
        elif [ ! -z "$F_ARG" ]; then
            echo "Not a directory: `pwd`/$FILE"
            exit 1
        elif [ -f "$1" ]; then
            FILE=$1
            F_ARG=1
        elif [ -d "$1" ]; then 
            cd $1
        else
            echo "No such file or directory: `pwd`/$1"
            exit 1
        fi
        shift
    done
}

foo (){
    if [ -d "$1" ]; then
        cd $1
        foo ".default"
    elif [ -f "$1" ]; then
        F="`realpath $1`" 
        if [ ! -z "$X_ARG" ]; then
            echo "$F"
        else
            chmod +x $F
            exec $F "${ARG[@]}"
        fi
    else
        foo `find * | head -1`
    fi
}

DIR=`i colorscripts`
if [ -z "$DIR" ]; then 
    echo "You need to specify color script directory:"
    echo -e "\t$ git clone https://github.com/stark/Color-Scripts.git <dir>"
    echo -e "\t$ i colorscripts <dir>/color-scripts"
    exit 1
fi
cd $DIR

go "$@"
if [ ! -z "$L_ARG" ] && [ ! -z "$F_ARG" ]; then 
    echo "Not a directory: `pwd`/$FILE"
    exit 1
fi

if [ ! -z "$L_ARG" ] ; then
    find .
elif [ ! -z "$M_ARG" ]; then
    DIR="$(realpath --relative-to `i colorscripts` .)"
    colormenu $DIR $FILE
else
    foo $FILE
fi

exit
